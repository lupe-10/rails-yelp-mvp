

<%= simple_form_for(restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category %> 
  <p>choose one of this list "chinese", "italian", "japanese", "french", "belgian"</p>
  <%= f.submit "Submit restaurant", class: "btn btn-primary" %>
<% end %>